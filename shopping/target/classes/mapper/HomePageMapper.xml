<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wx.shop.homePage.mapper.HomePageMapper">

    <!--  查询首页图片信息  -->
    <select id="queryHomePageInfo" parameterType="String" resultType="java.util.Map">
        select * from homePageImgcommentInfo where img_type=#{imgType}
    </select>


    <!--  查询楼层内产品信息  -->
    <select id="queryProductList" parameterType="String" resultType="java.util.Map">
--         查询数据库内相关产品信息
    </select>


    <!--  查询首页相关图片  -->
    <select id="findSwiperItems"  resultType="java.util.Map">
        select * from swiperItem
--         select * from homePageImgcommentInfo where img_type=#{imgType}
    </select>


    <!--  查询首页分类栏目  -->
    <select id="findSwiperCateList" resultType="java.util.Map">
        select * from swiperCate
    </select>



</mapper>