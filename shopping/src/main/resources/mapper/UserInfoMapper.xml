<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wx.shop.mapper.UserInfoMapper">



    <!--  查询用户密码  -->
    <select id="queryUserPassword" parameterType="java.lang.String" resultType="java.lang.String" >
        select user_passwd from user_info where user_name = #{username};
    </select>

    <!--  插入用户  -->
    <insert id="insertUserInfo" parameterType="com.wx.shop.entities.pojo.UserInfo">
        insert into user_info values (#{userId}, #{userName}, #{userPasswd}, #{userPhone}, now(), #{imgId}, #{fkRoleId}, #{spare1}, #{spare2}, #{spare3})
    </insert>

    <!--  通过用户名查询用户信息  -->
    <select id="queryByUserName" parameterType="java.lang.String" resultType="com.wx.shop.entities.pojo.UserInfo">
        select * from user_info where user_name = #{userName};
    </select>

</mapper>
